<h1>Skills</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Name</th>
      <th colspan="3">Points</th>
      <th colspan="3">Users count</th>
    </tr>
  </thead>

  <tbody>
    <% @user_skills.each do |skill| %>
      <tr>
        <td colspan="3"><%= skill["name"] %></td>
        <td colspan="3"><%= skill["points"] %></td>
        <td colspan="3"><%= skill["users_count"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Skills', skills_path %>